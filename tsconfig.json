{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "types": [
      "jest",
      "testing-library__jest-dom",
      "node"
    ],
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "__tests__",
    "jest.setup.ts",
    "src",
    "components",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
